              {% if acces == "oui" %}
              <a class="nav-link" href="?action=mesProjets">Mes projets</a>
              {% endif %}
          </div>

        <!--<a class="nav-link" href="?action=ajoutProjet">Ajouter</a>-->
          <div class="d-flex">
              <input class="form-control" list="searchBarOptions" id="searchBar" placeholder="Type to search...">
