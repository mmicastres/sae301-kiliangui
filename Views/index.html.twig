                  <option value="San Francisco">
                  <option value="New York">
                  <option value="Seattle">
                  <option value="Los Angeles">
                  <option value="Chicago">
              </datalist>
              {% if acces == "oui" %}
              <a class="nav-link" href="?action=espaceMembre">Espace membre</a>
                  {% endif %}
              {% if admin == "1" %}
                  <a class="nav-link" href="?action=espaceAdmin">Admin</a>
              {% endif %}
              {% if acces == "oui" %}
              <a class="nav-link" href="?action=logout">Deconnexion</a>
              {% else %}
                  <a class="nav-link" href="?action=login">Connexion</a>
                  <a class="nav-link" href="?action=register">Inscription</a>
              {% endif %}
          </div>

      </div>
    </div>
  </div>
</nav>

  <div class="container">
      {% if message %}<div class="alert alert-danger">{{message}}</div>{% endif %}
	{% block section %}
       <div>

