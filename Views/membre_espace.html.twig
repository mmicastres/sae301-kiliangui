{% extends "index.html.twig" %}

{% block section %}

    <h1>Espace Membre</h1>
    <div class="d-flex flex-column-reverse flex-md-row ">
        <section class="w-md-75 container">
            <h2>Vous avez participer</h2>

                <ul class="row p-0 row-cols-1 row-cols-md-3 row-cols-lg-4 gy-3">
                    <li class="card mb-3 col bg-body-color text-primary ">
                        <a href="?action=ajoutProjet" class="h-100">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center h-100">
                                <h2 class="card-title h5 a  text-primary">Ajoute un projet</h2>
                            </div>
                        </a>
                    </li>
                    {% for projet in projets %}
                        <li class="col list-unstyled  px-1 py-0  h-100 " >
                            <div class="card">
                                <a href="?action=projet&id={{ projet.idProjet }}">
                                    <img src="{{ projet.thumbnail.url }}" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h2 class="card-title h5">{{ projet.nomProjet }}</h2>
                                        <p class="card-text">{{ projet.courte }}</p>
                                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                    </div>
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>



        </section>
        <section class="card">
            <h2> Vos info</h2>
            <form id="infoMembre" action="" method="post">
                <input hidden name="idMembre" value="{{ membre.idMembre }}">
                <ul class="infos ">
                    <li>
                        <label for="nom">Nom :</label>
                        <input class="form-control" disabled id="nom" name="nom" value="{{ membre.nom }}">
                    </li>
                    <li>
                        <label for="prenom">Prenom :</label>
                        <input class="form-control" disabled id="prenom" name="prenom" value="{{ membre.prenom }}">
                    </li>
                    <li>
                       <label for="email">Email :</label>
                        <input class="form-control" disabled id="email" name="email" value="{{ membre.email }}">
                    </li>
                    <li>
                        <label for="idIUT">Identifiant IUT :</label>
                        <input class="form-control" disabled id="idIUT" name="idIUT" value="{{ membre.id_iut }}">
                    </li>
                </ul>
                <div class="d-flex justify-content-between align-items-center">
                    <button id="modMembre" class="btn btn-primary" type="button">Modifier les infos</button>
                    <div id="confModMembre"  class="d-none">

                        <button class="btn btn-success" type="submit" name="modifier_membre" value="true" >Valider</button>
                        <button class="btn btn-danger" type="submit" name="supprMembre">supprimer</button>
                    </div>
                </div>
            </form>
        </section>
    </div>

{% endblock %}

{% block head %}
    <script src="assets/js/updateMembre.js" defer></script>
{% endblock %}